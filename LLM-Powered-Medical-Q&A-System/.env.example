# .env.example
# This is a template file for environment variables required by the project.
# Copy this file as `.env` and fill in appropriate values before running the system.

# Base directory for the project
PROJECT_BASE=/home/user/medical-llm-project

# Path to local or remote LLM model checkpoint
MODEL_PATH=/models/llm/checkpoint.pt

# Optional database configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=admin
DB_PASSWORD=your_password

# Example third-party API key (e.g., for search, OCR, or EHR integration)
API_KEY=your_api_key_here

# Enable debug mode (True or False)
DEBUG=True
